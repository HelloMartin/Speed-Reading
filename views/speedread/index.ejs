<%  include ../partials/header %>

<div class="container">

  <h1 class="text-center">
    <span class="bio">Sp</span>eed <span class="bio">Rea</span>ding
  </h1>

  <div class="form-group">
    <textarea id="textarea" class="form-control" rows="5" id="comment">Hello World!</textarea>
  </div>
  <button type="button" class="btn btn-primary btn-lg btn-block" onClick="convertBionic()">Convert</button>

  <div class="card" style="width: 100%;">
    <div class="card-body">
      <h5 class="card-title">Thanks for using your converter</h5>
      <h6 class="card-subtitle mb-2 text-muted">there goes your text..</h6>
      <p id="bioDisplay"></p>
    </div>
  </div>
</div>

<script type="text/javascript">
  function convertBionic(){
    let textarea = document.getElementById('textarea'); // select textarea
    let bioDisplay = document.getElementById('bioDisplay'); // select display paragrath
    let str = textarea.value; // convert value to string
    let arr = str.split(" "); // split string to each word

    bioDisplay.innerHTML = ''; // set bioDisplay no empty string

    console.log(arr);

    arr.forEach((word) => { // for each

      let onethird = Math.ceil(word.length / 3); // get one third of word
      let bold = word.slice(0, onethird); // bold up first third of word
      let normal = word.slice(onethird); // get rest of word
      let finalstr = '<span class="bio">' + bold + '</span>' + normal + ' '; // assemble final string

      bioDisplay.innerHTML = bioDisplay.innerHTML + finalstr; // assemble final display
    });
  }
</script>


